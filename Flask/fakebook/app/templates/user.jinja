{% extends 'base.jinja' %}

{% block content %}
<h2>{{ user.username }} Profile</h2>

{% for post in posts %}
{# post.author is backref from User() same as user.username #}
    <p>User: {{ post.author.username }} <br> Title: {{ post.title }} <br> Post: {{ post.body }}</p>
{% endfor %}

{% endblock %}